  title = {Compound Hydroclimatic Extremes in a Semi-Arid Grassland: {{Drought}}, Deluge, and the Carbon Cycle},
  shorttitle = {Compound Hydroclimatic Extremes in a Semi-Arid Grassland},
  author = {Hoover, David L. and Hajek, Olivia L. and Smith, Melinda D. and Wilkins, Kate and Slette, Ingrid J. and Knapp, Alan K.},
