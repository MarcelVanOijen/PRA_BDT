@article{Gea-Izquierdo_2022_Forest,
  title = {Forest Disturbances and Climate Constrain Carbon Allocation Dynamics in Trees},
  author = {{Gea-Izquierdo}, Guillermo and {S{\'a}nchez-Gonz{\'a}lez}, Mariola},
  year = {2022},
