@article{Wood_2023_ecosystem,
  title = {The Ecosystem Wilting Point Defines Drought Response and Recovery of a {{Quercus-Carya}} Forest},
  author = {Wood, Jeffrey D. and Gu, Lianhong and Hanson, Paul J. and Frankenberg, Christian and Sack, Lawren},
