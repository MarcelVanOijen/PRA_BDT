@article{Wang_2022_Exploring,
  title = {Exploring Complex Water Stress--Gross Primary Production Relationships: {{Impact}} of Climatic Drivers, Main Effects, and Interactive Effects},
  shorttitle = {Exploring Complex Water Stress--Gross Primary Production Relationships},
  author = {Wang, Huan and Yan, Shijie and Ciais, Philippe and Wigneron, Jean-Pierre and Liu, Laibao and Li, Yan and Fu, Zheng and Ma, Hongliang and Liang, Ze and Wei, Feili and Wang, Yueyao and Li, Shuangcheng},
