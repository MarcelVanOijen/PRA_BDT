  langid = {english},
  keywords = {Climate Change,drought,extreme events,forest dynamics,mortality},
  file = {/Users/marcelvanoijen/OneDrive/Documents/Zotero_attachments/Jump et al_2017_Structural overshoot of tree growth with climate variability and the global.pdf;/Users/marcelvanoijen/OneDrive/Documents/Zotero_attachments/Jump et al_2017_Structural overshoot of tree growth with climate variability and the global3.pdf}
}

@article{jurgilevichSystematicReviewDynamics2017,
