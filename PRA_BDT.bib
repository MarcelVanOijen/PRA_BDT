  shorttitle = {Hydrologic Benchmarking of Meteorological Drought Indices at Interannual to Climate Change Timescales},
  author = {Joetzjer, E. and Douville, H. and Delire, C. and Ciais, P. and Decharme, B. and Tyteca, S.},
