@article{Hulsmann_2016_Does,
  title = {Does One Model Fit All? {{Patterns}} of Beech Mortality in Natural Forests of Three {{European}} Regions},
  shorttitle = {Does One Model Fit All?},
  author = {H{\"u}lsmann, Lisa and Bugmann, Harald K. M. and Commarmot, Brigitte and Meyer, Peter and Zimmermann, Stephan and Brang, Peter},
  year = {2016},
  journal = {Ecological Applications},
  volume = {26},
