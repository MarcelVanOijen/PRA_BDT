@article{wonkkaRangelandVulnerabilityState2019,
  title = {Rangeland Vulnerability to State Transition under Global Climate Change},
  author = {Wonkka, Carissa L. and Twidwell, Dirac and Allred, Brady W. and Bielski, Christine H. and Donovan, Victoria M. and Roberts, Caleb P. and Fuhlendorf, Samuel D.},
