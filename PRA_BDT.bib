  shorttitle = {Application of {{Bayesian Belief Networks}} to Quantify and Map Areas at Risk to Soil Threats},
  author = {Troldborg, Mads and Aalders, Inge and Towers, Willie and Hallett, Paul D. and McKenzie, Blair M. and Bengough, A. Glyn and Lilly, Allan and Ball, Bruce C. and Hough, Rupert L.},
