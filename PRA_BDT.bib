@article{Thrippleton_2020_Projecting,
  title = {Projecting {{Forest Dynamics Across Europe}}: {{Potentials}} and {{Pitfalls}} of {{Empirical Mortality Algorithms}}},
  shorttitle = {Projecting {{Forest Dynamics Across Europe}}},
  author = {Thrippleton, Timothy and H{\"u}lsmann, Lisa and Cailleret, Maxime and Bugmann, Harald},
  year = {2020},
