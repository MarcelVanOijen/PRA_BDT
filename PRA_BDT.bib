@article{garschagenExploringRelationshipsUrbanization2013,
  title = {Exploring the Relationships between Urbanization Trends and Climate Change Vulnerability},
  author = {Garschagen, Matthias and {Romero-Lankao}, Patricia},
  year = {2013},
