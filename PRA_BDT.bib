@article{Martin-Benito_2018_Pervasive,
  title = {Pervasive Effects of Drought on Tree Growth across a Wide Climatic Gradient in the Temperate Forests of the {{Caucasus}}},
  author = {Martin-Benito, Dario and Pederson, Neil and K{\"o}se, Nesibe and Do{\u g}an, Mehmet and Bugmann, Harald and Mosulishvili, Marine and Bigler, Christof},
