  author = {Malyshev, Andrey V. and Arfin Khan, Mohammed A. S. and Beierkuhnlein, Carl and Steinbauer, Manuel J. and Henry, Hugh A. L. and Jentsch, Anke and Dengler, J{\"u}rgen and Willner, Evelin and Kreyling, Juergen},
