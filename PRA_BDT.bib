  langid = {english},
  keywords = {Biodiversity,Conservation biology,Ecosystem ecology},
  file = {/Users/marcelvanoijen/OneDrive/Documents/Zotero_attachments/Keith et al_2022_A function-based typology for Earth’s ecosystems.pdf}
}

