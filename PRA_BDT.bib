@article{Marques_2018_Lastcentury,
  title = {Last-century Forest Productivity in a Managed Dry-edge {{Scots}} Pine Population: The Two Sides of Climate Warming},
  shorttitle = {Last-century Forest Productivity in a Managed Dry-edge {{Scots}} Pine Population},
  author = {Marqu{\'e}s, Laura and Madrigal-Gonz{\'a}lez, Jaime and Zavala, Miguel A. and Camarero, Jes{\'u}s Julio and Hartig, Florian},
