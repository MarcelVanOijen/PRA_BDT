  shorttitle = {{{HESS Opinions}} "{{Should}} We Apply Bias Correction to Global and Regional Climate Model Data?},
  author = {Ehret, U. and Zehe, E. and Wulfmeyer, V. and {Warrach-Sagi}, K. and Liebert, J.},
  year = {2012},
