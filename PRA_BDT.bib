  author = {Kannenberg, Steven A. and Novick, Kimberly A. and Alexander, M. Ross and Maxwell, Justin T. and Moore, David J. P. and Phillips, Richard P. and Anderegg, William R. L.},
  year = {2019},
  journal = {Global Change Biology},
  volume = {25},
